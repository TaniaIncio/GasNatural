<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linear_mensaje"
    tools:context="com.gmd.gasnatural.presentation.activity.TerminosCondicionesActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="@dimen/padd_texto_superior"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/txt_nogracias"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_button_solicitarvisita"
        android:gravity="center"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_texto_boton_solictarvisita"
            android:textStyle="bold"
            android:text="@string/btn_solicitar_visita"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/red_gas" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="?android:attr/listPreferredItemHeight"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_texto_principal_layout_mensaje"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_margin="@dimen/marg_txt_linear_mensaje"
                android:text="@string/title_red_gas"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_texto_layout_mensaje"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_margin="@dimen/marg_txt_linear_mensaje"
                android:text="@string/title_solicitar_visita"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
